<head>
  <link rel="stylesheet" href="/stylesheets/book.css" />
</head>

<%- include("../partials/_navbar.ejs") %>
<body>
<h1>Edit your Book list</h1>
<div class="edit-container">
<div class="edit-body">
<form action="/books/<%= reader._id%>?_method=PUT" method="post">
  <label for="title">Book Title</label>
  <input type="text" name="title" id="title" value="<%= reader.title %>">
  <br>

  <label for="numOfPages">Number of pages</label>
  <input type="number" name="numOfPages" id="numOfPages" value="<%= reader.numOfPages%>">
  <br>

  <label for="pagesPerDay">Pages Per Day</label>
  <input type="number" name="pagesPerDay" id="pagesPerDay" value="<%= reader.pagesPerDay %>">
  <br>

  <div class="checkbox-div">
  <label for="isDoneReading">Done Reading</label>
  <input type="checkbox" name="isDoneReading" id="isDoneReading" <% if (reader.isDoneReading){%>
  checked <%}%>>
  </div>
</div>
  <br>

  <button type="submit">Update</button>
</form>
</div>
</body>
